{
    "repositories": [
        {
            "type": "vcs",
            "url":  "git@github.com:xaviemirmon/composer-2-workspaces-plugin.git"
        }
    ],
    "require-dev": {
        "tmdk/composer-workspaces-plugin": "dev-overrides"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "workspaces": {
            "packages": [
                "packages/*",
                "starters/*"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "tmdk/composer-workspaces-plugin": true
        }
    }
}
